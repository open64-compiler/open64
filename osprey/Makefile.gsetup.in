endif
ifndef BUILD_OS
     BUILD_OS	    = LINUX
endif
ifndef BUILD_HOST
     BUILD_HOST     = @BUILD_HOST@
endif
ifndef BUILD_BOTH
     BUILD_BOTH     = @BUILD_BOTH@
endif
ifndef BUILD_GNU3
     BUILD_GNU3     = @BUILD_GNU3@
endif
ifndef BUILD_SKIP_IPA
     BUILD_SKIP_IPA = @BUILD_SKIP_IPA@
endif
ifndef COMPILER_TARG_DIR
     COMPILER_TARG_DIR = @abs_top_builddir@/osprey/targdir
endif
